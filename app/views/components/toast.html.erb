<%= render "shared/page", title: "Toast Component" do %>
  <h2 class="text-xl font-semibold mb-4">Toast Examples</h2>
  <div data-controller="toast">
    <!-- Basic Toast Example -->
    <h3 class="text-lg font-semibold mt-4">Basic Toast</h3>
    <button data-action="click->toast#show" class="bg-blue-500 text-white px-4 py-2 rounded">Show Basic Toast</button>
    <div data-toast-target="toast" class="hidden fixed bottom-5 right-5 bg-gray-800 text-white p-4 rounded shadow-lg">
      This is a basic toast message!
      <button data-action="click->toast#close" class="ml-2 bg-red-500 text-white px-2 py-1 rounded">Close</button>
    </div>
    <!-- Dismissible Toast Example -->
    <h3 class="text-lg font-semibold mt-4">Dismissible Toast</h3>
    <button data-action="click->toast#show" class="bg-blue-500 text-white px-4 py-2 rounded">Show Dismissible Toast</button>
    <div data-toast-target="toast" class="hidden fixed bottom-16 right-5 bg-green-500 text-white p-4 rounded shadow-lg">
      This is a dismissible toast message!
      <button data-action="click->toast#close" class="ml-2 bg-red-500 text-white px-2 py-1 rounded">Close</button>
    </div>
    <!-- Auto-Dismiss Toast Example -->
    <h3 class="text-lg font-semibold mt-4">Auto-Dismiss Toast</h3>
    <button data-action="click->toast#show" class="bg-blue-500 text-white px-4 py-2 rounded">Show Auto-Dismiss Toast</button>
    <div data-toast-target="toast" class="hidden fixed bottom-27 right-5 bg-yellow-500 text-white p-4 rounded shadow-lg">
      This toast will auto-dismiss in 3 seconds!
      <button data-action="click->toast#close" class="ml-2 bg-red-500 text-white px-2 py-1 rounded">Close</button>
    </div>
  </div>
<% end %>
