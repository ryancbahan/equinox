<%= render "shared/page", title: "Modal Component" do %>
  <h2 class="text-xl font-semibold mb-4">Modal Examples</h2>
  <!-- Basic Modal Example -->
  <h3 class="text-lg font-semibold mt-4">Basic Modal</h3>
  <div data-controller="modal">
    <button class="bg-primary text-white px-4 py-2 rounded" data-action="modal#open">Open Basic Modal</button>
    <div data-modal-target="modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
      <div class="bg-surface p-5 rounded shadow-lg w-1/2 max-w-lg">
        <h4 class="text-lg font-semibold">Basic Modal Title</h4>
        <p>This is the content of the basic modal.</p>
        <button data-action="click->modal#close" class="bg-critical text-white px-4 py-2 rounded mt-4">Close</button>
      </div>
    </div>
  </div>
  <!-- Modal with Form Example -->
  <h3 class="text-lg font-semibold mt-4">Modal with Form</h3>
  <div data-controller="modal">
    <button class="bg-primary text-white px-4 py-2 rounded" data-action="modal#open">Open Modal with Form</button>
    <div data-modal-target="modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
      <div class="bg-surface p-5 rounded shadow-lg w-1/2 max-w-lg">
        <h4 class="text-lg font-semibold">Modal with Form Title</h4>
        <form>
          <label class="block mt-2 text-neutral-default">Your Name:</label>
          <input type="text" class="border border-gray-300 bg-surface p-2 w-full rounded" />
          <button type="submit" class="mt-4 bg-success text-white px-4 py-2 rounded">Submit</button>
        </form>
        <button data-action="click->modal#close" class="bg-critical text-white px-4 py-2 rounded mt-4">Close</button>
      </div>
    </div>
  </div>
<% end %>
