<%= render "shared/page", title: "Modal Component" do %>
  <h2 class="text-xl font-semibold mb-4">Modal Examples</h2>
  <!-- Basic Modal Example -->
  <h3 class="text-lg font-semibold mt-4">Basic Modal</h3>
  <div data-controller="modal">
    <button data-action="click->modal#open" class="bg-blue-500 text-white px-4 py-2 rounded">Open Basic Modal</button>
    <div>
      <div data-modal-target="modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
        <div class="bg-white p-5 rounded shadow-lg">
          <h4 class="text-lg font-semibold">Basic Modal Title</h4>
          <p>This is the content of the basic modal.</p>
          <button data-action="click->modal#close" class="mt-4 bg-red-500 text-white px-4 py-2 rounded">Close</button>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal with Form Example -->
  <h3 class="text-lg font-semibold mt-4">Modal with Form</h3>
  <div data-controller="modal">
    <button data-action="click->modal#open" class="bg-blue-500 text-white px-4 py-2 rounded">Open Modal with Form</button>
    <div data-modal-target="modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
      <div class="bg-white p-5 rounded shadow-lg">
        <h4 class="text-lg font-semibold">Modal with Form Title</h4>
        <form>
          <label class="block mt-2">Your Name:</label>
          <input type="text" class="border p-2 w-full" />
          <button type="submit" class="mt-4 bg-green-500 text-white px-4 py-2 rounded">Submit</button>
        </form>
        <button data-action="click->modal#close" class="mt-4 bg-red-500 text-white px-4 py-2 rounded">Close</button>
      </div>
    </div>
  </div>
<% end %>
