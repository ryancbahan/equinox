<%= render "shared/page", title: "Banner Component" do %>
  <h2>Banner Examples</h2>
  <!-- Static Banner Example -->
  <h3>Static Banner</h3>
  <%= render partial: "shared/banner", locals: { message: "This is a static banner.", dismissible: false, status: :neutral } %>
  <!-- Dismissible Banner Example -->
  <h3>Dismissible Banner</h3>
  <%= render partial: "shared/banner", locals: { message: "Welcome to Equinox! This is your banner message.", dismissible: true, status: :info } %>
  <!-- Success Banner Example -->
  <h3>Success Banner</h3>
  <%= render partial: "shared/banner", locals: { message: "Your action was successful!", dismissible: true, status: :success } %>
  <!-- Warning Banner Example -->
  <h3>Warning Banner</h3>
  <%= render partial: "shared/banner", locals: { message: "Please check your input!", dismissible: true, status: :warning } %>
  <!-- Critical Banner Example -->
  <h3>Critical Banner</h3>
  <%= render partial: "shared/banner", locals: { message: "An error occurred!", dismissible: true, status: :critical } %>
<% end %>
