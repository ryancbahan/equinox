<!-- app/views/components/example.html.erb -->
<%= render "shared/page", title: "Component Examples" do %>
  <!-- Badge Examples -->
  <h2 class="text-xl font-semibold mb-2">Badge Examples</h2>
  <div class="flex space-x-4">
    <%= render partial: "shared/badge", locals: { text: "Default Badge" } %>
    <%= render partial: "shared/badge", locals: { text: "Success Badge" } %>
    <%= render partial: "shared/badge", locals: { text: "Warning Badge" } %>
  </div>
  <!-- Avatar Examples -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Avatar Examples</h2>
  <div class="flex space-x-4">
    <%= render partial: "shared/avatar", locals: { src: "https://via.placeholder.com/150", alt: "Default Avatar", size: "w-16 h-16" } %>
    <%= render partial: "shared/avatar", locals: { src: "https://via.placeholder.com/100", alt: "Small Avatar", size: "w-8 h-8" } %>
  </div>
  <!-- Icon Examples -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Icon Examples</h2>
  <div class="flex space-x-4">
    <!-- Use the arrow_down.svg icon -->
    <%= render partial: "shared/icon", locals: { icon_name: "arrow_down", size: "w-6 h-6", additional_classes: "text-gray-500" } %>
  </div>
  <!-- Card Examples -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Card Examples</h2>
  <div class="space-y-4">
    <%= render partial: "shared/card", locals: { title: "Card Title", description: "This card contains a badge component.", badge_text: "Featured" } %>
    <%= render partial: "shared/card", locals: { title: "Another Card", description: "This card does not have a badge.", badge_text: nil } %>
  </div>
  <!-- Select Examples -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Select Examples</h2>
  <%= render partial: "shared/select", locals: { label: "Choose an Option", options: ["Option 1", "Option 2", "Option 3"] } %>
  <!-- Banner Examples -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Banner Examples</h2>
  <%= render partial: "shared/banner", locals: { message: "Welcome to Equinox! This is your banner message.", dismissible: true } %>
  <%= render partial: "shared/banner", locals: { message: "This is a static banner.", dismissible: false } %>
  <!-- Input Field, Checkbox, Radio Button, and Button Form -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Form Examples</h2>
  <%= form_with url: "/example", method: :post, local: true do |form| %>
    <!-- Input Fields -->
    <%= form.text_field :username, label: "Username" %>
    <%= form.email_field :email, label: "Email" %>
    <!-- Checkbox -->
    <%= form.check_box :terms, label: "I agree to the terms" %>
    <!-- Radio Buttons -->
    <%= form.radio_button :option, "1", label: "Option 1" %>
    <%= form.radio_button :option, "2", label: "Option 2" %>
    <!-- Submit Button -->
    <%= form.submit "Submit" %>
  <% end %>
<% end %>
