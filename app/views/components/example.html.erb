<!-- app/views/components/example.html.erb -->
<%= render "shared/page", title: "Component Examples" do %>
  <!-- Badge Examples -->
  <h2 class="text-xl font-semibold mb-2">Badge Examples</h2>
  <div class="flex space-x-4">
    <%= render partial: "shared/badge", locals: { text: "Default Badge" } %>
    <%= render partial: "shared/badge", locals: { text: "Success Badge" } %>
    <%= render partial: "shared/badge", locals: { text: "Warning Badge" } %>
  </div>
  <!-- Dropdown Example -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Dropdown Example</h2>
  <%= render partial: "shared/dropdown", locals: { 
    button_text: "Select Option", 
    options: [
      { text: "Option 1", url: "#" },
      { text: "Option 2", url: "#" },
      { text: "Option 3", url: "#" }
    ] 
  } %>
  <!-- Datepicker Example -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Datepicker Example</h2>
  <%= render "shared/datepicker" %>
  <!-- Code Block Example -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Code Block Example</h2>
  <%= render partial: "shared/codeblock", locals: { code: "<div>Hello, world!</div>" } %>
  <!-- Tabs Example -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Tabs Example</h2>
  <%= render partial: "shared/tabs", locals: {
    tabs: [
      { title: "Tab 1", content: "<h3 class='text-lg font-semibold'>Welcome to Tab 1</h3><p>This is some <strong>rich text</strong> content inside the first tab.</p>" },
      { title: "Tab 2", content: "<h3 class='text-lg font-semibold'>Details for Tab 2</h3><ul class='list-disc pl-5'><li>First item</li><li>Second item</li><li>Third item</li></ul>" },
      { title: "Tab 3", content: "<h3 class='text-lg font-semibold'>Form in Tab 3</h3><form><label for='name' class='block text-sm font-medium text-gray-700'>Name</label><input type='text' id='name' name='name' class='mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md' /></form>" }
    ]
  } %>
  <!-- Skeleton Loading Example -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Skeleton Loading Example</h2>
  <%= render "shared/skeleton" %>
  <!-- Dropzone Example -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Dropzone Example</h2>
  <%= render "shared/dropzone" %>
  <!-- Toast Example -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Toast Example</h2>
  <%= render partial: "shared/toast", locals: { button_text: "Show Toast", message: "This is a toast notification!" } %>
  <!-- Tooltip Example -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Tooltip Example</h2>
  <%= render partial: "shared/tooltip", locals: { target_text: "Hover over me", tooltip_text: "This is a tooltip!" } %>
  <!-- Collapsible Example -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Collapsible Example</h2>
  <%= render partial: "shared/collapsible", locals: { button_text: "Toggle Content", title: "Collapsible Section", content: "This is the collapsible content. It can be toggled by clicking the button." } %>
  <!-- Modal Example -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Modal Example</h2>
  <%= render partial: "shared/modal", locals: { button_text: "Open Modal", title: "Modal Title", content: "This is the content of the modal." } %>
  <!-- Unordered List Example Styled Like a Table -->
  <%= render partial: "shared/list", locals: { 
  list_type: 'ul', 
  items: [['Item 1', 'Description 1'], ['Item 2', 'Description 2'], ['Item 3', 'Description 3']], 
  additional_classes: '' 
} %>
  <!-- Ordered List Example Styled Like a Table -->
  <%= render partial: "shared/list", locals: { 
  list_type: 'ol', 
  items: [['First', 'First Desc'], ['Second', 'Second Desc'], ['Third', 'Third Desc']], 
  additional_classes: '' 
} %>
  <!-- Table Examples -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Table Examples</h2>
  <%= render partial: "shared/table", locals: { 
    headers: ['Name', 'Age', 'City'], 
    rows: [['John', '30', 'New York'], ['Jane', '25', 'San Francisco'], ['Bob', '35', 'Chicago']],
    additional_classes: '' 
  } %>
  <!-- Card Examples -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Card Examples</h2>
  <div class="space-y-4">
    <%= render partial: "shared/card", locals: { title: "Card Title", description: "This card contains a badge component.", badge_text: "Featured" } %>
    <%= render partial: "shared/card", locals: { title: "Another Card", description: "This card does not have a badge.", badge_text: nil } %>
  </div>
  <!-- Select Examples -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Select Examples</h2>
  <%= render partial: "shared/select", locals: { label: "Choose an Option", options: ["Option 1", "Option 2", "Option 3"] } %>
  <!-- Banner Examples -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Banner Examples</h2>
  <%= render partial: "shared/banner", locals: { message: "Welcome to Equinox! This is your banner message.", dismissible: true } %>
  <%= render partial: "shared/banner", locals: { message: "This is a static banner.", dismissible: false } %>
  <!-- Input Field, Checkbox, Radio Button, and Button Form -->
  <h2 class="text-xl font-semibold mt-4 mb-2">Form Examples</h2>
  <%= form_with url: "/example", method: :post, local: true do |form| %>
    <!-- Input Fields -->
    <%= form.text_field :username, label: "Username" %>
    <%= form.email_field :email, label: "Email" %>
    <!-- Checkbox -->
    <%= form.check_box :terms, label: "I agree to the terms" %>
    <!-- Radio Buttons -->
    <%= form.radio_button :option, "1", label: "Option 1" %>
    <%= form.radio_button :option, "2", label: "Option 2" %>
    <!-- Submit Button -->
    <%= form.submit "Submit" %>
  <% end %>
<% end %>
