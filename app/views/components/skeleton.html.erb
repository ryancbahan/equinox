<%= render "shared/page", title: "Skeleton Component" do %>
  <h2 class="text-xl font-semibold mb-4">Skeleton Examples</h2>
  <!-- Basic Skeleton Example -->
  <h3 class="text-lg font-semibold mt-4">Basic Skeleton</h3>
  <div class="mb-4">
    <%= render partial: "shared/skeleton", locals: { width: "200px", height: "20px" } %>
  </div>
  <!-- Circular Skeleton Example -->
  <h3 class="text-lg font-semibold mt-4">Circular Skeleton</h3>
  <div class="mb-4">
    <%= render partial: "shared/skeleton", locals: { width: "50px", height: "50px", circular: true } %>
  </div>
  <!-- Multiple Skeletons Example -->
  <h3 class="text-lg font-semibold mt-4">Multiple Skeletons</h3>
  <div class="mb-4 space-y-2">
    <%= render partial: "shared/skeleton", locals: { width: "100%", height: "20px" } %>
    <%= render partial: "shared/skeleton", locals: { width: "75%", height: "20px" } %>
    <%= render partial: "shared/skeleton", locals: { width: "50%", height: "20px" } %>
  </div>
  <!-- Custom Styled Skeleton Example -->
  <h3 class="text-lg font-semibold mt-4">Custom Styled Skeleton</h3>
  <div class="mb-4">
    <%= render partial: "shared/skeleton", locals: { width: "200px", height: "20px", additional_classes: "bg-blue-200" } %>
  </div>
<% end %>
