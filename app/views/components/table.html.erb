<%= render "shared/page", title: "Table Component" do %>
  <h2 class="text-xl font-semibold mb-4">Table Examples</h2>
  <!-- Basic Table Example -->
  <h3 class="text-lg font-semibold mt-4">Basic Table</h3>
  <%= render partial: "shared/table", locals: { 
    headers: ['Name', 'Age', 'City'], 
    rows: [['John Doe', '30', 'New York'], ['Jane Smith', '25', 'San Francisco'], ['Bob Johnson', '35', 'Chicago']],
    additional_classes: 'w-full border border-gray-300'
  } %>
  <!-- Table with Action Buttons -->
  <h3 class="text-lg font-semibold mt-4">Table with Action Buttons</h3>
  <%= render partial: "shared/table", locals: { 
    headers: ['Name', 'Age', 'Actions'], 
    rows: [
      ['John Doe', '30', '<button class="bg-blue-500 text-white px-2 py-1 rounded">Edit</button>'],
      ['Jane Smith', '25', '<button class="bg-blue-500 text-white px-2 py-1 rounded">Edit</button>'],
      ['Bob Johnson', '35', '<button class="bg-blue-500 text-white px-2 py-1 rounded">Edit</button>']
    ],
    additional_classes: 'w-full border border-gray-300'
  } %>
  <!-- Responsive Table Example -->
  <h3 class="text-lg font-semibold mt-4">Responsive Table</h3>
  <div class="overflow-x-auto">
    <%= render partial: "shared/table", locals: { 
      headers: ['Product', 'Price', 'Stock'], 
      rows: [
        ['Product 1', '$10.00', 'In Stock'],
        ['Product 2', '$15.50', 'Out of Stock'],
        ['Product 3', '$7.99', 'In Stock']
      ],
      additional_classes: 'min-w-full border border-gray-300'
    } %>
  </div>
<% end %>
