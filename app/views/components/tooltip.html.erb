<%= render "shared/page", title: "Tooltip Component" do %>
  <h2 class="text-xl font-semibold mb-4">Tooltip Examples</h2>
  <!-- Basic Tooltip Example -->
  <h3 class="text-lg font-semibold mt-4">Basic Tooltip</h3>
  <div data-controller="tooltip">
    <div class="relative inline-block">
      <button data-action="mouseover->tooltip#show mouseout->tooltip#hide" class="bg-blue-500 text-white px-4 py-2 rounded">
        Hover over me
      </button>
      <div data-tooltip-target="tooltip" class="hidden absolute z-10 bg-gray-700 text-white text-sm p-2 rounded mt-1">
        This is a basic tooltip!
      </div>
    </div>
  </div>
  <!-- Tooltip with Delay -->
  <h3 class="text-lg font-semibold mt-4">Tooltip with Delay</h3>
  <div data-controller="tooltip">
    <div class="relative inline-block">
      <button data-action="mouseover->tooltip#show mouseout->tooltip#hide" class="bg-blue-500 text-white px-4 py-2 rounded">
        Hover for delay
      </button>
      <div data-tooltip-target="tooltip" class="hidden absolute z-10 bg-green-500 text-white text-sm p-2 rounded mt-1">
        Tooltip will show after a delay!
      </div>
    </div>
  </div>
  <!-- Tooltip with Custom Position -->
  <h3 class="text-lg font-semibold mt-4">Tooltip with Custom Position</h3>
  <div data-controller="tooltip">
    <div class="relative inline-block">
      <button data-action="mouseover->tooltip#show mouseout->tooltip#hide" class="bg-blue-500 text-white px-4 py-2 rounded">
        Custom Position
      </button>
      <div data-tooltip-target="tooltip" class="hidden absolute right-0 z-10 bg-purple-500 text-white text-sm p-2 rounded mt-1">
        This tooltip is positioned differently!
      </div>
    </div>
  </div>
<% end %>
