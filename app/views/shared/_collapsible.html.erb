<div data-controller="collapsible">
  <!-- Button to trigger collapse -->
  <button class="bg-primary text-white px-4 py-2 rounded focus:outline-none transition duration-200" data-action="collapsible#toggle">
    <%= button_text %>
  </button>
  <!-- Collapsible Content -->
  <div data-collapsible-target="content" class="hidden mt-4 bg-surface p-4 rounded shadow transition duration-200">
    <h2 class="text-lg font-semibold text-neutral-default mb-2"><%= title %></h2>
    <p class="text-neutral-default"><%= content %></p>
  </div>
</div>
