<div class="mb-4 flex items-center">
  <input 
    type="radio" 
    id="<%= id %>" 
    name="<%= name %>" 
    value="<%= value %>" 
    class="h-4 w-4 text-primary border-gray-300 focus:ring focus:ring-primary"
    <% if checked %> checked <% end %> 
  />
  <% if label.present? %>
    <label for="<%= id %>" class="ml-2 block text-sm font-medium text-neutral-default">
      <%= label %>
    </label>
  <% end %>
</div>
