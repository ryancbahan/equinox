<div data-controller="tabs">
  <!-- Tab Navigation -->
  <div class="flex space-x-4 mb-4 border-b-2 border-neutral-default">
    <% tabs.each_with_index do |tab, index| %>
      <a href="#" 
         class="tab px-4 py-2 <%= index == 0 ? 'border-b-2 border-primary text-primary' : 'text-neutral-default hover:text-primary' %>" 
         data-action="click->tabs#switchTab" 
        data-target="tab-<%= index %>" 
        data-tabs-target="tab">
        <%= tab[:title] %>
      </a>
    <% end %>
  </div>
  <!-- Tab Content -->
  <% tabs.each_with_index do |tab, index| %>
    <div id="tab-<%= index %>" class="tab-content <%= index == 0 ? '' : 'hidden' %> mt-4" data-tabs-target="content">
      <div class="bg-surface shadow rounded-lg p-6">
        <%= tab[:content].html_safe %>
      </div>
    </div>
  <% end %>
</div>
