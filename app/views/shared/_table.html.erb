<table class="min-w-full table-auto border-collapse border border-neutral-default bg-surface <%= additional_classes %>">
  <thead>
    <tr class="bg-neutral-light">
      <% headers.each do |header| %>
        <th class="border border-neutral-default px-4 py-2 text-left text-primary"><%= header %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% rows.each do |row| %>
      <tr class="hover:bg-neutral-light">
        <% row.each do |cell| %>
          <td class="border border-neutral-default px-4 py-2 text-primary"><%= cell %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
