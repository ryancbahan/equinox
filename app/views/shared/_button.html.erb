<% button_classes = {
  primary: "shadow-sm bg-primary text-button-default hover:bg-hoverBg-primary hover:text-hoverText-primary focus:ring-2 focus:ring-primary",
  secondary: "shadow-sm border border-primary text-primary bg-surface hover:bg-hoverBg-primary hover:text-hoverText-primary focus:ring-2 focus:ring-primary",
  destructive: "shadow-sm bg-critical text-button-default hover:bg-hoverBg-critical hover:text-hoverText-critical focus:ring-2 focus:ring-critical",
  disabled: "shadow-sm bg-gray-300 text-button-default cursor-not-allowed",
} %>
<% status = local_assigns.fetch(:status, :primary) %>
<% disabled = local_assigns.fetch(:disabled, false) %>
<% additional_classes = local_assigns.fetch(:additional_classes, '') %>
<%= button_tag local_assigns[:text], 
    class: "#{button_classes[status] || button_classes[:primary]} px-4 py-2 rounded #{additional_classes}", 
    disabled: disabled 
%>
